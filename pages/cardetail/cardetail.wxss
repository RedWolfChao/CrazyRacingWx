/* pages/cardetail/cardetail.wxss */
.detail_quality_img {
  width: 100%;
  padding-left: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  height: 60rpx;
  display: block;
}

.detail_quality_img image {
  display: inline-block;
  height: 45rpx;
  margin-right: 15rpx;
  width: 120rpx;
}

page{
   background-color: #040811;
   color: #FFF;
}

.detail_desc_text {
  padding: 20rpx;
  margin: 20rpx;
  font-size: 0.6rem;
  color: #fff;
  background-color: rgba(255, 255, 255, 0.05);
}

.detail_car_img {
  background-color: rgba(255, 255, 255, 0.05);
  padding: 20rpx;
  margin: 20rpx;
}

.detail_car_img image {
  width: 100%;
}

.detail_progress {
  background-image: url("https://raw.githubusercontent.com/RedWolfChao/WxCrazyRacingRec/master/images/res/img_point_line_n.png");
  background-size: 100% 100%;
  text-align: center;
}

.detail_line_car_data_text {
  background-color:#40BBFE;
  border-radius: 15rpx;
  padding-left: 40rpx;
  color: #fff;
  padding-right: 40rpx;
}

.detail_progress_body {
  border-radius: 20rpx;
  background-color:rgba(255, 255, 255, 0.2);
  margin: 20rpx;
  padding: 20rpx;
}

.detail_special_body {
  border-radius: 20rpx;
  background-color:rgba(255, 255, 255, 0.2);
  margin: 20rpx;
  height: 300rpx;
  padding: 20rpx;
}
.detail_progress_body_text {
  height: 300rpx;
  width: 20%;
  display: inline-block;
}

.detail_progress_body_progress {
  height: 300rpx;
  width: 65%;
  display: inline-block;
}

.detail_progress_pass {
  display: inline-block;
  background: #40BBFE;
  height: 50%;
  width: 20%;
}

.detail_progress_all {
  height: 50%;
  background-color:rgba(255, 255, 255, 0.05);
  display: inline-block;
  width: 80%;
}

.detail_progress_body_text_item {
  height: 20%;
  font-size: 0.7rem;
  text-align: left;
}

.detail_progress_body_progress_item {
  height: 20%;
}

.detail_progress_body_num {
  height: 300rpx;
  width: 15%;
  display: inline-block;
}
.detail_progress_body_num_item {
  height: 20%;
  font-size: 0.7rem;
  text-align: center;
}
.detail_special_item{
  font-size: 0.8rem;
  color: #FFF;
}
