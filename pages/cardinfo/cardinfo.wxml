<!--pages/cardinfo/cardinfo.wxml-->
<!-- Tab -->
<view class="swiper-tab">
  <view class="swiper-tab-item {{(currentTab==1)||((filtering)&&(currFilterType=='quality'))?'active':''}}" data-current="1" data-name="品质" bindtap="clickTab">{{(currentTab==1)||((filtering)&&(currFilterType=='quality'))?currFilterName+' ∧':'品质 ∨'}}</view>
  <view class="swiper-tab-item {{(currentTab==2)||((filtering)&&(currFilterType=='location'))?'active':''}}" data-current="2" data-name="定位" bindtap="clickTab">{{(currentTab==2)||((filtering)&&(currFilterType=='location'))?currFilterName+' ∧':'定位 ∨'}}</view>
  <view class="swiper-tab-item {{(currentTab==3)||((filtering)&&(currFilterType=='sort'))?'active':''}}" data-current="3" data-name="排序" bindtap="clickTab">{{(currentTab==3)||((filtering)&&(currFilterType=='sort'))?currFilterName+' ∧':'排序 ∨'}}</view>
</view>
<!-- body -->
<!-- default -->
<view class="item_default" hidden="{{currentTab!=0}}">
      <image class="item_default_list" wx:for="{{currentCarList}}" wx:for-index="index" wx:for-item="item" mode="aspectFit" src="{{item.subImg}}"></image>
</view>
<!-- quality -->
<view class="item_body" hidden="{{currentTab!=1}}">
  <view class="item_list" wx:for="{{qualityList}}" wx:for-index="index" wx:for-item="item" bindtap="onQualityItemClick" data-filtername="{{item.qualityName}}">
    {{item.qualityName}}
  </view>
</view>
<!-- location -->
<view class="item_body" hidden="{{currentTab!=2}}">
  <view class="item_list" wx:for="{{locationList}}" wx:for-index="index" wx:for-item="item" bindtap="onLocationItemClick" data-filtername="{{item.locationName}}">
    {{item.locationName}}
  </view>
</view>
<!-- sort -->
<view class="item_body" hidden="{{currentTab!=3}}">
  <view class="item_list" wx:for="{{sortList}}" wx:for-index="index" wx:for-item="item" bindtap="onSortItemClick" data-filtername="{{item.sortName}}">
    {{item.sortName}}
  </view>
</view>