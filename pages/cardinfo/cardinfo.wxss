/* pages/cardinfo/cardinfo.wxss */

.swiper-tab {
  width: 100%;
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
}

page {
  background-color: #040811;
}

.swiper-tab-item {
  width: 32.5%;
  background-color: #F3EFE3;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  color: #000;
}

.active {
  font-weight: bold;
  color: rgb(255, 0, 0);
  background-color: #FCEA60;
  border-top-left-radius: -20rpx;
  border-bottom: 4rpx solid #FCEA60;
}

.item_body {
  text-align: center;
}

.item_list {
  height: 150rpx;
  width: 100%;
  font-size: 50rpx;
  color: #fff;
  line-height: 150rpx;
  border-bottom: 1px #fff solid;
}

.item_default {
  display: inline-block;
  width: 100%;
}

.item_default_list {
  display: inline-block;
  width: 30%;
}

/* 1 4 7 ...n item样式 */

.item_default :nth-child(3n+1) {
  height: 250rpx;
  margin-left: 2.5%;
}

/* 2 5 8 ..n item样式 */

.item_default :nth-child(3n+2) {
  height: 250rpx;
  margin-left: 2.5%;
  margin-right: 2.5%;
}
/* 3 6 9 ..n item样式 */

.item_default :nth-child(3n) {
  height: 250rpx;
  margin-right: 2.5%;
}

