.car_info_input_parent {
  height: 60rpx;
  margin:30rpx;
  margin-bottom: 50rpx;
  border-radius: 15rpx;
  background-color: #fff;
}

.car_info_input_img {
  width: 36rpx;
  height: 36rpx;
  margin: 12rpx;
}

.car_info_input_text {
  display: inline-block;
  height: 60rpx;
  line-height: 60rpx;
}
