/**index.wxss**/
.index_container{
  width: 100vw;
  height:100vh;
  background-size: 100% 100%;
  background-image: url('https://raw.githubusercontent.com/RedWolfChao/WxCrazyRacingRec/master/images/ic_bg_n.jpg')
}

.index_box{
  width: 90%;
  height: 60%;
  margin-left: 5%;
  background-color:rgba(0, 0, 0, 0.8);
  border-radius: 5rpx;
}
.index_header{
  height: 35%;
  width: 100%;
}

.box_short_left{
  border-radius: 20rpx;
  width: 43%;
  margin-left: 5%;
  margin-right: 5%;
  margin-top: 5%;
  height: 25%;
}

.box_short_right{
  border-radius: 20rpx;
  width: 43%;
  margin-top: 3%;
  height: 25%;
}
.box_long{
  border-radius: 20rpx;
  width: 90%;
  margin-left: 5%;
  margin-right: 5%;
  margin-top: 3%;
  margin-bottom: 3%;
  height: 30%;
}
